@model List<BookStoreApp.Models.Book>

<h2>Book List</h2>
<a href="/Book/Create">Add New Book</a>
<table border="1">
    <tr><th>Title</th><th>Author</th><th>Price</th><th>Quantity</th><th>Actions</th></tr>
    @foreach(var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.Price</td>
            <td>@book.Quantity</td>
            <td>
                <a href="/Book/Edit/@book.Id">Edit</a> |
                <a href="/Book/Delete/@book.Id">Delete</a>
            </td>
        </tr>
    }
</table>
